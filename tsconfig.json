{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "packages/*": ["packages/*"],
      "projects/*": ["projects/*"]
    }
  },
  "include": ["packages/**/*", "projects/**/*"],
  "exclude": ["node_modules", "dist", "**/.nuxt", "**/node_modules"]
}
